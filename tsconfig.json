{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "customConditions": ["react-native"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": [
      "expo-router/types",
      "nativewind/types",
      "@types/react",
      "@types/react-native"
    ],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "app",
    "components",
    "config",
    "store",
    "expo-env.d.ts",
    ".expo/types/**/*.ts",
    "nativewind.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": ["node_modules"]
}